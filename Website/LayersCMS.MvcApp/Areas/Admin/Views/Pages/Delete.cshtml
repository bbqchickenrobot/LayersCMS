@model LayersCMS.Data.Domain.Core.Pages.LayersCmsPage

@{
    ViewBag.Title = "Delete page";
}

<h1>Delete a page</h1>

@using (Html.BeginForm("Delete", "Pages", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.Alert("Are you sure you want to delete this page?", "Hold up!", AlertTypes.Error)

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Page title</th>
                <td>@Model.PageTitle</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>@Model.Url</td>
            </tr>
            <tr>
                <th>Live</th>
                <td>@Html.BooleanIcon(Model.IsPublished)</td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions">
        @Html.HiddenFor(m => m.Id)
        <input type="hidden" name="delete" value="true" />
        <input type="submit" name="delete" value="Yes, delete the page" class="btn btn-danger" />
        @Html.ActionLink("No, cancel", "List", "Pages", null, new {@class = "btn btn-link"})
    </div>   
}